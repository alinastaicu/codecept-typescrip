{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es7", "es2017", "dom"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "noImplicitReturns": true
  },
  "typeRoots" : [
    "./node_modules/@types",
    "./src/@types"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
